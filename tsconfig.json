{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
        "moduleResolution": "node",
    "strict": true,                            
    "esModuleInterop": true,                   
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",                        
    "declaration": true,                      
    "sourceMap": true                          
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

